{
  "name": "softcar-map-parser",
  "version": "0.0.0",
  "main": "main-process.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:ng": "ng build --base-href ./",
    "build:electron": "tsc main-process.ts preload.ts",
    "start-electron": "npm run build:ng && npm run build:electron && electron .",

    "dist:win": "npm run build:ng && npm run build:electron && electron-builder --win nsis",
    "dist:mac": "npm run build:ng && npm run build:electron && electron-builder --mac dmg",
    "dist:all": "npm run build:ng && npm run build:electron && electron-builder -mwl"
  },
  "build": {
    "publish": "never",
    "appId": "com.softcar.mapparser",
    "productName": "Softcar Map Parser",
    "files": [
      "dist/**/*",
      "main-process.js",
      "preload.js"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "MapParser-Setup-${version}.exe"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "MapParser-${version}.dmg"
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@fortawesome/angular-fontawesome": "^3.0.0",
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-regular-svg-icons": "^7.0.1",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "apexcharts": "^5.3.2",
    "bootstrap": "^5.3.7",
    "ng-apexcharts": "^2.0.0",
    "ng-multiselect-dropdown": "^1.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^37.2.6",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2"
  }
}
